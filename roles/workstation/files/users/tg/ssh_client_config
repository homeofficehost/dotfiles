Host default_dietpi
        PubkeyAuthentication yes
        User DietPi
        HostName DietPi.local
        IdentityFile ~/.ssh/tgroch_id_rsa
        IdentitiesOnly yes
        StrictHostKeyChecking no
        UserKnownHostsFile /dev/null
        VisualHostKey yes
        LogLevel INFO
        ControlMaster auto
        ControlPath ~/.ssh/multiplex/%r@%h:%p
        ControlPersist 1

Host cr
    PubkeyAuthentication yes
    User cr
    HostName C.local
    IdentityFile ~/.ssh/tgroch_id_rsa
    IdentitiesOnly yes    
    XAuthLocation /opt/X11/bin/xauth
    ForwardAgent yes
    ForwardX11 yes
    # StrictHostKeyChecking no
    # UserKnownHostsFile /dev/null
    # VisualHostKey yes
    # LogLevel INFO
    # ControlMaster auto
    # ControlPath ~/.ssh/multiplex/%r@%h:%p
    # ControlPersist 1

Host cr_tunnel
    PubkeyAuthentication yes
    LocalForward 8081 127.0.0.1:8080
    User cr
    HostName cr-3.local
    IdentitiesOnly yes

Host pi-hole
    PubkeyAuthentication yes
    User pi
    HostName pi-hole.local
    IdentityFile ~/.ssh/tgroch_id_rsa
    IdentitiesOnly yes

Host default_rpi
    PubkeyAuthentication yes
    User pi
    HostName raspberrypi.local 
    IdentityFile ~/.ssh/tgroch_id_rsa
    IdentitiesOnly yes
    
Host default_hypriot
    PubkeyAuthentication yes
    User pirate
    HostName black-pearl.local 
    IdentityFile ~/.ssh/tgroch_id_rsa
    IdentitiesOnly yes

host heroku.com
    user git
    hostname heroku.com
    IdentityFile ~/.ssh/tgroch_id_rsa
         
Host bitbucket.org
    IdentityFile ~/.ssh/tgroch_id_rsa



# # SSH Key Search Order
# # ids/$HOST/$USER/id_XXX
# IdentityFile ~/.ssh/ids/%h/%r/id_rsa
# IdentityFile ~/.ssh/ids/%h/%r/id_dsa

# # ids/$HOST/id_xxx
# IdentityFile ~/.ssh/ids/%h/id_rsa
# IdentityFile ~/.ssh/ids/%h/id_dsa

# # Default
# IdentityFile ~/.ssh/id_rsa
# IdentityFile ~/.ssh/id_dsa

Host github.com
    IdentityFile ~/.ssh/tgroch_id_rsa

Host local
    PubkeyAuthentication yes
    IdentityFile ~/.ssh/tgroch_id_rsa
    IdentitiesOnly yes

Host example.com
    PubkeyAuthentication yes
    IdentityFile ~/.ssh/id_rsa
    IdentitiesOnly yes

# ssh -f -N tunnel
Host tunnel
    HostName database.example.com
    IdentityFile ~/.ssh/id_rsa
    LocalForward 9906 127.0.0.1:3306
    User root

