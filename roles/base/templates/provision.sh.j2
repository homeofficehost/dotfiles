#!/bin/bash

# options
ANSIBLEUSER="{{ username }}"
BRANCH="{{ branch | default('master') }}"
LOGFILE="/var/log/ansible.log"
REPO="{{ upstream | default('https://github.com/homeofficehost/dotfiles') }}"

VAULT_ID="{{ username }}@gopass-client.py"
PRECMD="sudo systemd-inhibit --who='ansible-pull' --why='provisioning'"

# check if ansible-pull is already running, and if not, run it
if pgrep -f ansible-pull; then
    printf "\n$(date +"%Y-%m-%d %H:%M:%S") A running ansible-pull process was found.\nExiting.\n"\
        |tee -a $LOGFILE
    exit 1
else
    if [ ! $1 == "" ]; then
        $PRECMD sudo -iH --user $ANSIBLEUSER ansible-pull --limit $(cat /etc/hostname).local --vault-id=$VAULT_ID --url $REPO --checkout $BRANCH --tags $1 2>&1
    else
        $PRECMD sudo -iH --user $ANSIBLEUSER ansible-pull --limit $(cat /etc/hostname).local --vault-id=$VAULT_ID --only-if-changed --url $REPO --checkout $BRANCH 2>&1
    fi
fi
